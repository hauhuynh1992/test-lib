<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"
        android:background="#ffffff"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="15dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp">

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn chưa nhập mã Voucher"
                android:textColor="#484848"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/ll_product"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/tvMessage"
                android:layout_marginTop="13dp"
                android:background="@drawable/bg_round_gray"
                android:orientation="horizontal"
                android:padding="10dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/parent_layout"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    app:cardMaxElevation="1dp">

                    <ImageView
                        android:id="@+id/ivProduct"
                        android:layout_width="33dp"
                        android:layout_height="33dp" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toLeftOf="@+id/tv_price"
                    android:layout_toRightOf="@+id/parent_layout"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Bạn chưa nhập mã Vouchersdfadfdf sdfa afasdfasdfasddfadfaadf "
                    android:textColor="#484848"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="2dp"
                    android:text="10.000.000đ"
                    android:textColor="#999999"
                    android:textSize="9sp" />


            </RelativeLayout>

            <TextView
                android:id="@+id/tvTimout"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_product"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:background="#00000000"
                android:gravity="center"
                android:text="Đóng (1s)"
                android:textAllCaps="false"
                android:textColor="#999999"
                android:textSize="10sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>

